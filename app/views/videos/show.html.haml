%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{@video.large_cover_url}")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span
            - if @average_rating
              = "Rating: #{h @average_rating}/5.0"
            - else
              = "No Ratings"
        %p= @video.description

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @video_review, url: review_video_path(@video) do |f|
        %fieldset
          .form-group
            %label Rate this video
            .row
              .col-sm-3
                = f.select :rating, options_for_select([5, 4, 3, 2, 1].map { |number| [pluralize(number, 'Star'), number] }), {}, class: "form-control"
          .form-group
            %label Write Review
            .row
              .col-sm-8
                = f.text_area :review, rows: 6, class: "form-control"
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to 'Cancel', @video
      %header
        %h3 User Reviews (#{h @reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{h review.rating} / 5
                %p by <a href="">#{h review.user.full_name}</a>
              .col-sm-8
                %p #{h review.review}
        
